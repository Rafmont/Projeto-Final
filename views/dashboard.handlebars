<script>

  document.addEventListener('DOMContentLoaded', function() {
    var calendarEl = document.getElementById('calendar');
    var calendar = new FullCalendar.Calendar(calendarEl, {
      height: 800,
      plugins: [ 'interaction', 'dayGrid', 'timeGrid', 'list' ],
      header: {
        left: 'prev,next today',
        center: 'title',
        right: 'dayGridMonth,timeGridWeek,timeGridDay'
      },

      eventClick: function(info) {
        window.location.href = "/admin/ver-evento/" + info.event.id
      },

      defaultDate: Date.now(),
      navLinks: true, // can click day/week names to navigate views
      businessHours: true, // display business hours
      editable: true,
      locale: 'pt-br',
      events: [
        {{#each eventos}}
          {{#ifcond acontecer '==' true}}
            {{#has_passed data}}
              {
                title: '{{titulo}}',
                start: '{{dateFormatiso data}}T{{horario}}',
                end: '{{dateFormatiso data}}T{{horario_termino}}',
                color: '#5cb85c',
                id: '{{_id}}'
              }, 
            {{else}}
              { 
                title: '{{titulo}}',
                start: '{{dateFormatiso data}}T{{horario}}',
                end: '{{dateFormatiso data}}T{{horario_termino}}',
                color: '#bcbcbc',
                id: '{{_id}}'
              }, 
            {{/has_passed}}
          {{/ifcond}} 
        {{/each}}
      ]
    });

    calendar.render();
  });

</script>




<h2 style="text-align: center">Bem vindo ao sistema Vento Solar!</h2>
<div class="card">
    <div class="card-body">
      {{#ifcond user.nivel_usuario '!=' 1}}
        <a href="/admin/cadastro-evento"><button class="btn btn-success">Criar Evento</button></a>
        <hr>
      {{/ifcond}}
          <div id='calendar'></div>
          <br><br>          
    </div>
</div>




