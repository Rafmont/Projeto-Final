    <div class="card-body">
      {{#ifcond user.nivel_usuario '!=' 1}}
        <a href="/admin/cadastro-evento"><button class="btn btn-success">Criar Evento</button></a>
        <hr>
      {{/ifcond}}
          <div id='calendar'></div>
          <br><br>          
    </div>
</div>



