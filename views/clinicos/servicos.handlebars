<h3>Servi√ßos:</h3>
<div class="card">
    <div class="card-body">
        {{#ifcond user.nivel_usuario '!=' 1}}
        <a href="/usuario/cadastro-servico"><button class="btn btn-success">Cadastrar</button></a>
        <hr>
        {{/ifcond}}
        {{#if servicos}}
        {{#each servicos}}
            {{#ifcond ativo "==" true}}
                <div class="card mt-3">
                    <div class="card-body">
                        <h4>{{nome}}</h4>
                        <hr>
                        <p style="text-align:justify">{{descricao}}</p>
                        <p>R$ {{valor}}</p>
                        <a href="/usuario/alterar-servico/{{_id}}"<button class="btn btn-success mt-2">Alterar</button></a>
                    </div>
                </div>
            {{/ifcond}}
        {{/each}}
        {{else}}
            <p>Sem tecnicas cadastradas.</p>
        {{/if}}
    </div>
</div>